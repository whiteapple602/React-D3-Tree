{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "removeComments": true,
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}